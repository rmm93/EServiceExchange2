<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.eserviceexchange.MainActivitiesPackage.ChangeSettings"
    android:background="@color/colorWhite">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/newposttoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Account Settings"
        app:titleTextColor="@color/colorWhite" />
    <ImageView
        android:id="@+id/logo1s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorWhite"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@id/usernames"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newposttoolbar"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:srcCompat="@drawable/logo1s" />

    <EditText
        android:id="@+id/usernames"
        android:inputType="textPersonName"
        android:layout_margin="8dp"
        android:layout_width="0dp"
        android:hint="Username"
        android:layout_height="wrap_content"
        android:ems="24"
        android:textSize="24dp"
        android:background="@color/colorPrimaryTransparent"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDarkTransparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo1s"
        app:layout_constraintBottom_toTopOf="@+id/phonenums"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="231dp" />

    <EditText
        android:id="@+id/phonenums"
        android:layout_margin="8dp"
        android:layout_width="0dp"
        android:hint="Phone: +966 5555 55555"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:ems="24"
        android:textSize="24dp"
        android:inputType="phone"
        android:background="@color/colorPrimaryTransparent"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDarkTransparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernames"
        />

    <Button
        android:id="@+id/setupbtns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:text="Submit"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phonenum"
        app:layout_constraintVertical_bias="0.117" />
</androidx.constraintlayout.widget.ConstraintLayout>
